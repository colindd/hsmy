/* pages/teacher/index/index.wxss */
page{
  background:#EEEEEE;
}
.header{
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  text-align:center;
  background-color:#F9547E;
  color:#fff;
  box-sizing: border-box;
  padding:60rpx 0 30rpx;
}
.head_img{
  width:130rpx;
  height:130rpx;
  border-radius:50%;
}
.head_img image{
  border-radius:50%;
}
.teacher_name, .organization{
  margin-top:10rpx;
}
.teacher_name{
  font-size:32rpx;
  font-weight:bold;
}
.nav_box{
  width:100%;
  height:90rpx;
  background:#fff;
  color:#353535;
  box-sizing: border-box;
}
.nav_item{
  width:33.33%;
  line-height:90rpx;
  text-align:center;
  box-sizing: border-box;
}
.nav_item:not(:first-child){
  border-left:1rpx solid #eee;
}
.activeNav{
  color:#F9547E;
  font-weight:bold;
  position: relative;
}
.activeNav::after{
  content: '';
  width:80rpx;
  height:8rpx;
  border-radius:8rpx;
  background:#F9547E;
  position: absolute;
  bottom:8rpx;
  left:50%;
  margin-left:-40rpx;
}
.bot_box{
  width:100%;
  padding-bottom: 20rpx;
}
.list_item{
  margin-top:20rpx;
  width:100%;
  padding:20rpx;
  background-color:#fff;
  box-sizing:border-box;
}
.item_title{
  line-height:60rpx;
  justify-content: space-between;
  border-bottom:1rpx solid #eee;
}
.release_time{
  color:#F9547E;
}
.release_time image{
  width:40rpx;
  height:40rpx;
  display:inline-block;
  position: relative;
  top:10rpx;
}
.item_status{
  color:#5592FA;
  font-size:26rpx;
}
.item_main{
  margin-top:10rpx;
}
.item_name{
  font-size:32rpx;
  line-height:60rpx;
  font-weight:500;
  color:#000;
}
.item_deadtime, .item_examtime, .item_member{
  color:#353535;
  line-height:50rpx;
  margin-top:10rpx;
}
.item_btn{
  justify-content: flex-end;
}
.shear_btn{
  padding:15rpx 30rpx;
  color:#fff;
  background: #F9547E;
  box-shadow: 0px 3px 6px rgba(249, 84, 126, 0.3);
  opacity: 1;
  border-radius: 4px;
}
.no_list{
  color:#888;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
}