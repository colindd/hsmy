/* pages/enroll/enroll.wxss */
page{
  background-color: #fff;
}
.list_box{
  box-sizing: border-box;
  padding:0 30rpx;
}
.list_item{
  margin-top:40rpx;
  box-sizing: border-box;
  box-shadow: 0px 6px 12px rgba(79, 71, 232, 0.2);
  border-radius:20rpx;
  position: relative;
}
.list_item_title{
  width:100%;
  line-height:90rpx;
  font-size:30rpx;
  color:#000;
  font-weight:500;
  box-sizing: border-box;
  padding:0 20rpx;
  border-radius:20rpx 20rpx 0 0;
  background:#F1F1F3;
}
.list_item_bot{
  box-sizing: border-box;
  padding:0 20rpx 40rpx;
}
.list_item_line{
  color:#888888;
  margin-top:20rpx;
}
.list_item_corner{
  width:120rpx;
  height:120rpx;
  position: absolute;
  top:0;
  right:0;
}
.none_box{
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 300rpx 0;
  box-sizing: border-box;
}
.none_box image{
  width:330rpx;
  height:230rpx;
}
.tip_text{
  margin-top:20rpx;
  font-size:30rpx;
}
.back_index{
  text-align:center;
  color:#fff;
  width:180rpx;
  line-height:60rpx;
  border-radius:10rpx;
  margin-top:40rpx;
  background: linear-gradient(122deg, #FF8F78 0%, #FE657F 100%);
}