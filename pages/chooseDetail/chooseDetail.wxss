/* pages/chooseDetail/chooseDetail.wxss */
page{
  background-color: #fff;
}
.container{
  box-sizing: border-box;
  padding:0 20rpx;
}
.list_item{
  line-height:100rpx;
  margin-top:10rpx;
  border-bottom:1rpx solid #eee;
  justify-content: space-between;
}
.list_item_left{
  color:#353535;
}
.list_item_right{
  color:#B2B2B2
}
.list_tip{
  justify-content: flex-start;
  border-bottom:none;
}
.first_right{
  color:#353535;
}
.list_item_right picker{
  width:130rpx;
  text-align:right;
  height:90rpx;
}

checkbox{
  margin-left:10rpx;
}
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius:50%;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #F9547E;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.next_btn{
  width:100%;
  text-align:center;
  line-height:90rpx;
  font-size:32rpx;
  color:#fff;
  background: linear-gradient(122deg, #FF8F78 0%, #FE657F 100%);
  border-radius: 20rpx;
  margin-top:300rpx;
}