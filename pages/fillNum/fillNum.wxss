/* pages/fillNum/fillNum.wxss */
page{
  background-color: #fff;
}
.container{
  width:100%;
  box-sizing: border-box;
  padding:0 30rpx;
}
.address_title{
  line-height:70rpx;
  font-weight:500;
  font-size:30rpx;
}
.address_content{
  width:100%;
  color:#888888;
  margin-top:10rpx;
}
.number_box{
  margin-top:50rpx;
}
.number_title{
  font-size:30rpx;
  color:#FE657F;
}
.number_bot{
  margin-top:20rpx;
  width:100%;
  height:90rpx;
  background:#F3F3F3;
  border-radius:20rpx;
  box-sizing: border-box;
  padding-left:20rpx;
}
.express_input {
  height:100%;
  width:90%;
  line-height:90rpx;
  color:#B2B2B2;
}
.express_input input{
  display:block;
  width:100%;
  height:100%;
}
.done_btn{
  margin-top:180rpx;
  text-align:center;
  color:#fff;
  font-size:32rpx;
  line-height:90rpx;
  border-radius:20rpx;
  background: linear-gradient(123deg, #FF8F78 0%, #FE657F 100%);
  box-shadow: 0px 6px 12px rgba(254,101,127, 0.4);
}
.clear_inp{
  width:10%;
}
.clear_inp image{
  width:50rpx;
  height:50rpx;
  margin:20rpx auto 0;
}
