/* pages/simulateDetail/simulateDetail.wxss */
.fixed{
  position: fixed;
}
.push_box{
  position:fixed;
  width:100%;
  height:100%;
}
.play_box{
  position: fixed;
  left:10px;
  bottom:55px;
  width:160px;
  height:220px;
}
.live_header{
  top:0;
  left:0;
  height:50px;
  line-height:50px;
  font-size:14px;
  width:100%;
  box-sizing: border-box;
  padding:0 20px;
  background:rgba(0,0,0,0.5);
}
.header_left{
  width:40%;
  color:#FFDE48;
  line-height:50px;
}
.back_page{
  margin-right:10px;
  height:100%;
}
.back_icon{
  width:20px;
  height:20px;
  display: block;
  margin-top:15px;
}
.v_icon{
  width:15px;
  height:15px;
  position: relative;
  top:18px;
  display:block;
  margin-right:2px;
}
.header_time{
  height:100%;
  line-height:50px;
}
.header_right{
  color:#fff;
  font-size:17px;
  line-height:50px;
  margin-left:5%;
}
.live_bottom{
  bottom:0;
  left:0;
  width:100%;
  height:50px;
  line-height:50px;
  background:rgba(0,0,0,0.5);
  font-size:14px;
  box-sizing: border-box;
  padding:0 20px;
}
.bottom_left{
  width:40%;
  color:#FFDE48;
  line-height:50px;
}
.bottom_left .v_icon{
  width:15px;
  height:15px;
  position: relative;
  top:18px;
  display:block;
  margin-right:2px;
}
.bot_left_txt{
  line-height:50px;
}
.bottom_mid{
  color:#fff;
  width:20%;
  line-height:50px;
  margin-left:5%;
}
.bottom_right{
  width:35%;
  justify-content: flex-end;
}
.exam_info_box{
  width:25%;
  background:#eee;
  right:0;
  top:50px;
  font-size:14px;
}
.toggletBtn{
  width:30px;
  height:30px;
  position: fixed;
  top:50%;
  right:0;
  margin-top:-20px;
}
.toggletBtnImg{
  width:100%;
  height:100%;
}
.openBtn{
  right:25%;
  margin-right:-20rpx;
}
.stu_box{
  width:100%;
  height:65px;
  background:#fff;
  font-size:14px;
  box-sizing: border-box;
  padding:0 5px;
  justify-content: space-around;
}
.stu_name{
  margin-top:15px;
}
.header{
  width:50px;
  height:50px;
  margin-top:7px;
}
.stu_header{
  border-radius:50%;
}
.stu_exam{
  color: #888888;
}
.exam_info{
  width:100%;
  background:#fff;
  margin-top:10px;
  font-size:14px;
  box-sizing: border-box;
  padding:10px;
}
.exam_detail_img{
  margin-top:10px;
}
.c-state1{ 
  transform: rotate(0deg) scale(1) translate(100%,0%);  
  -webkit-transform: rotate(0deg) scale(1) translate(100%,0%);  
 } 
 .done{
   width:80px;
   height:40px;
   line-height:40px;
   text-align:center;
   color:#fff;
   background-color:#FE657F;
   border-radius:10px;
   margin-top:5px;
   /* margin-right:20px; */
 }