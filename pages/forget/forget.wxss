/* pages/forget/forget.wxss */
page{
  background-color: #fff;
}
.container{
  width:90%;
  margin:0 auto;
}
.login_main{
  width:100%;
  margin-top:30rpx;
}
.input_box{
  width:100%;
  border-bottom:1rpx solid #EEEEEE;
  margin-top:10rpx;
  height:100rpx;
  line-height:100rpx;
  overflow: hidden;
}
.imgcode_right image{
  width:180rpx;
  height:80rpx;
}
.clear_inp{
  width:10%;
}
.clear_inp image{
  width:50rpx;
  height:50rpx;
  margin:40rpx auto 0;
}
.label_left{
  width:10%;
}
.label_left image{
  width:40rpx;
  height:40rpx;
  margin:45rpx auto 0;
}
.label_mid{
  width:60%;
  margin-left:10rpx;
}
.label_mid input{
  height:100%;
  height:130rpx;
}
.code_right{
  color:#5592FA;
}
.label_right{
  width:70%;
  height:100%;
  margin-left:10rpx;
}
.label_right input{
  height:100%;
  height:130rpx;
}
.show_psd{
  width:10%;
}
.show_psd image{
  width:50rpx;
  height:50rpx;
  margin:40rpx auto 0;
}

.reg_btn{
  width:100%;
  margin-top:200rpx;
  line-height:100rpx;
  border-radius:20rpx;
  font-size:32rpx;
  text-align:center;
  color:#fff;
  background: linear-gradient(123deg, #FF8F78 0%, #FE657F 100%);
  box-shadow: 0px 6px 12px rgba(254,101,127, 0.4);
}
